page {
    height: 100%;
}

.page-container {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    overflow: auto;
    background-color: #eeeeee;
}

.page-container .page-header {
    flex-shrink: 0;
    display: flex;
}

.page-container .page-content {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
}

.page-content .content-top,.content-bottom {
    flex-shrink: 0;
    height: 80px;
    display: flex;
    margin-bottom: 10px;
}

.hide-scroll::-webkit-scrollbar { display: none; }

.item {
    flex-shrink: 0;
    width: 20%;
    display: flex;
    flex-direction: column;
    padding: 10px;
    box-sizing: border-box;
    text-align: center;
}

.item image {
    flex-shrink: 0;
    width: 100%;
    height: 100%;
}

.item text {
    flex-shrink: 0;
    margin-top: 5px;
    font-size: 12px;
}

.home-swiper {
    width: 100%;
    height: 360rpx;
  }
  
.slide-image {
    width: 100%;
    height: 100%;
}

.page-content .discount-wrapper {
    flex-shrink: 0;
    height: 260rpx;
    display: flex;
    padding: 0 20rpx;
    box-sizing: border-box;
    justify-content: space-between;
    margin-top: 10rpx;
}

.discount-wrapper image {
    flex-shrink: 0;
    width: 171rpx;
    height: 260rpx;
    border-radius: 8rpx;
}

.page-content .day-update {
    flex-shrink: 0;
    height: 380rpx;
    display: flex;
    flex-direction: column;
    background-color: white;
    margin: 20rpx;
    border-radius: 12rpx;
}

.day-update .title-wrapper {
    flex-shrink: 0;
    height: 86rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 18rpx;
    overflow: hidden;
}

.day-update .title {
    font-size: 36rpx;
    line-height: 50rpx;
    font-weight: bold;
    color: rgb(51,51,51);
}

.day-update .other {
    font-size: 24rpx;
    line-height: 50rpx;
    color: rgb(151,151,151);
}

.day-update .content-wrapper {
    margin-top: 20rpx;
    flex-shrink: 0;
    height: 270rpx;
    display: flex;
    overflow: hidden;
    align-items: center;
    overflow: auto;
}

.day-update .content-wrapper .content {
    flex-shrink: 0;
    width: 25%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
}

.day-update .content-wrapper .content image {
    flex-shrink: 0;
    width: 186rpx;
    height: 186rpx;
}

.day-update .content-wrapper .content text {
    flex-shrink: 0;
    height: 64rpx;
    margin-left: 14rpx;
    font-size: 22rpx;
    color: rgb(51,51,51);
    text-align: center;
}

.page-content .crowfunding {
    flex-shrink: 0;
    height: 258rpx;
    margin: 0 20rpx;
}

.page-content .crowfunding image {
    width: 100%;
}
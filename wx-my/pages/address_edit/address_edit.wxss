.pop-content {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
}

.pop-content>.pop-top {
    flex-shrink: 0;
    height: 90rpx;
    background-color: white;
    display: flex;
    justify-content: center;
    align-items: center;
    border-bottom: 2rpx solid rgba(191,191,192);
}

.pop-content>.pop-top>text.title {
    flex-grow: 1;
    margin: 0 90rpx;
    text-align: center;
    color: rgba(51,51,51);
    font-size: 32rpx;
}

.pop-content>.pop-top>image {
    position: absolute;
    left: 0;
    top: 0;
    width: 90rpx;
    height: 90rpx;
    color: black;
}

.pop-content>.content {
    flex-grow: 1;
    background-color: rgba(244,244,244);
    display: flex;
    height: 672rpx;
    flex-direction: column;
}


page {
    height: 100%;
}

.page-container {
	width: 100%;
	height: 100%;
	display: flex;
	flex-direction: column;
}

.page-container>.page-header {
	flex-shrink: 0;
	height: 90rpx;
	background-color: rgba(244,244,244);
	display: flex;
	justify-content: center;
	align-items: center;
	position: relative;
}

.page-header>text.title {
	font-size: 32rpx;
	margin: 0 90rpx;
}

.page-header>image.back {
	position: absolute;
	left: 0;
	top: 0;
	width: 78rpx;
}

.page-container>.page-content {
	flex-grow: 1;
	background-color: rgba(244,244,244);
	display: flex;
	flex-direction: column;
}

.page-content>.content-top {
	flex-shrink: 0;
	margin-top: 24rpx;
	height: 150rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
} 

.page-content>.content-top>text.account {
	flex-shrink: 0;
	font-size: 48rpx;
	color: rgba(215,29,29);
}

.page-content>.content-top>text.timer {
	flex-shrink: 0;
	font-size: 24rpx;
	color: rgba(215,29,29);
}

.page-content>.content-pay {
	flex-shrink: 0;
	height: 240rpx;
	background-color: white;
	display: flex;
	flex-direction: column;
	margin: 0 20rpx;
	border-radius: 20rpx;
}

.page-content>.content-pay>.pay-top {
	flex-shrink: 0;
	height: 120rpx;
	border-bottom: 1rpx solid rgba(224,224,224);
	display: flex;
	align-items: center;
	padding-right: 20rpx;
	position: relative;
}

.page-content>.content-pay>.pay-top>image.pay {
	flex-shrink: 0;
	width: 60rpx;
	margin: 0 20rpx;
}

.page-content>.content-pay>.pay-top>text.title {
	flex-shrink: 0;
	margin-right: 16rpx;
	font-size: 28rpx;
	color: rgba(51,51,51);
}

.page-content>.content-pay>.pay-top>text.recommend {
	flex-shrink: 0;
	font-size: 18rpx;
	background-color: rgba(191,17,17);
	color: white;
	border-radius: 20rpx;
	width: 60rpx;
	height: 30rpx;
	line-height: 30rpx;
	text-align: center;
}

.page-content>.content-pay>.pay-top>image.checkbox {
	flex-shrink: 0;
	display: none;
	width: 32rpx;
	text-align: left;
	position: absolute;
	right: 20rpx;
	top: calc(50% - 16rpx);
}

.page-content>.content-pay>.pay-top>image.checkbox.active {
	display: block;
}

.page-content>.content-pay>.pay-bottom {
	flex-shrink: 0;
	height: 120rpx;
	display: flex;
	align-items: center;
	padding-right: 20rpx;
	position: relative;
}

.page-content>.content-pay>.pay-bottom>image.pay {
	flex-shrink: 0;
	width: 60rpx;
	margin: 0 20rpx;
}

.page-content>.content-pay>.pay-bottom>text.title {
	flex-shrink: 0;
	margin-right: 16rpx;
	font-size: 28rpx;
	color: rgba(51,51,51);
}

.page-content>.content-pay>.pay-bottom>image.checkbox {
	flex-shrink: 0;
	display: none;
	width: 32rpx;
	text-align: left;
	position: absolute;
	right: 20rpx;
	top: calc(50% - 16rpx);
}

.page-content>.content-pay>.pay-bottom>image.checkbox.active {
	display: block;
}


.page-container>.page-footer {
	flex-shrink: 0;
	height: 108rpx;
	display: flex;
	justify-content: center;
	align-items: center;
}

.page-footer>text.btn-pay {
	flex-shrink: 0;
	width: 690rpx;
	font-weight: 500;
	font-size: 30rpx;
	text-align: center;
	padding: 16rpx 0;
	background-color: rgba(191,17,17);
	color: white;
	border-radius: 40rpx;
}

.pay-wrapper {
	position: fixed;
	left: 10%;
	top: 25%;
	background-color: white;
	width: 600rpx;
	height: 600rpx;
	display: none;
	flex-direction: column;
	align-items: center;
	justify-content: space-around;
}

.pay-wrapper.active {
	display: flex;
	z-index: 50;
}

.pay-wrapper>image {
	flex-shrink: 0;
	width: 50%;
	margin-top: 40rpx;
}

.pay-wrapper>text.account {
	flex-basis: 0;
	font-size: 48rpx;
	font-weight: 400;
	color: rgba(191,17,17);
}

.pay-wrapper>.btn-wrapper {
	margin-bottom: 40rpx;
	flex-shrink: 0;
	width: 100%;
	display: flex;
	justify-content: space-around;
}

.pay-wrapper>.btn-wrapper>text.pay {
	flex-shrink: 0;
	background-color: rgba(191,17,17);
	color: white;
	padding: 10rpx 30rpx;
	border-radius: 30rpx;
}

.pay-wrapper>.btn-wrapper>text.cancel {
	flex-shrink: 0;
	background-color: rgba(191,17,17);
	color: white;
	padding: 10rpx 30rpx;
	border-radius: 30rpx;
}

.pay-wrapper>text.close {
	position: absolute;
	right: 10rpx;
	top: 10rpx;
	font-size: 64rpx;
}

.curtain {
	position: fixed;
	left: 0;
	top: 0;
	background-color: rgba(0,0,0,0.2);
	width: 100%;
	height: 100%;
	display: none;
}

.curtain.active {
	display: block;
	z-index: 49;
}



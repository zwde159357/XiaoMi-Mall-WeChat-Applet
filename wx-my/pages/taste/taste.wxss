.taste-wrapper {
    display: flex;
    flex-direction: column;
}

.taste-wrapper .detail-null {
    height: 20rpx;
    flex-shrink: 0;
    background-color: #DDDDDD;
} 

.taste-wrapper .detail-other {
    flex-shrink: 0;
    height: 92rpx;
    text-align: center;
    display: flex;
    flex-direction: column;
}

.taste-wrapper text.other {
    flex-shrink: 0;
    line-height: 92rpx;
    font-size: 30rpx;
    color: rgba(51,51,51);
}

.taste-wrapper .detail-recommend {
    flex-shrink: 0;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    padding: 10rpx;
    box-sizing: border-box;
    background-color: rgba(244,244,244);
}

.detail-recommend .item {
    display: flex;
    padding: 10rpx;
    width: 50%;
    box-sizing: border-box;
    justify-content: space-around;
}

.detail-recommend .item navigator {
    flex-shrink: 0;
    flex-grow: 1;

    padding: 10rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    justify-content: center;
    background-color: white;
}

.detail-recommend .item navigator image {
    width: 100%;
}

.detail-recommend .item navigator text {
    font-size: 22rpx;
    margin-bottom: 10rpx;
}

.detail-recommend .item navigator text.name {
    color: rgba(51,51,51);
}

.detail-recommend .item navigator text.brief {
    color: #999999;
}

.detail-recommend .item navigator text.price {
    font-size: 34rpx;
    color: red;
}
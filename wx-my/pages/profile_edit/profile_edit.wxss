/* pages/rate/index.wxss */
.container {
    display: flex;
    flex-direction: column;
}

.container .header {
    flex-shrink: 0;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 40rpx;
    text-align: center;
}

.name-wrapper {
    flex-shrink: 0;
    height: 100rpx;
    display: flex;
    align-items: center;
    background-color: #eee;
    font-size: 36rpx;
}

.name-wrapper .name {
    flex-shrink: 0;
    width: 140rpx;
}

.name-wrapper .input {
    flex-shrink: 0;
    width: 80%;
    border: 1rpx solid white;
}

.avatar {
    flex-shrink: 0;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    font-size: 32rpx;
}

.image-list-wrapper {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    background-color: #eee;
    padding: 20rpx;
}

.image-wrapper {
    width: 48%;
    padding-bottom: 48%;
    position: relative;
    margin: 20rpx 0;
    background-color: white;
}

.image {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgb(121, 121, 121);
}

.btn {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    border: 1rpx dashed black;
    border-radius: 8rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    color: red;
}

.btn-wrapper {
    flex-shrink: 0;
    width: 100%;
    display: flex;
    justify-content: center;
}

.upLoad {
    margin-top: 40rpx;
    padding: 20rpx 80rpx;
    color: white;
    background-color: red;
    border-radius: 40rpx;
}

.preview-wrapper {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: white;
    z-index: 100;
}

.preview-wrapper .big-image {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    width: 100%;
    height: 100%;
}

.preview-wrapper .resume {
    position: absolute;
    left: 100rpx;
    top: 100rpx;
    width: 100rpx;
    height: 100rpx;
    line-height: 100rpx;
    padding: 0 50rpx;
    background-color: red;
    color: white;
    border-radius: 50rpx;
    text-align: center;
}

.preview-wrapper .quit {
    position: absolute;
    right: 100rpx;
    top: 100rpx;
    width: 100rpx;
    height: 100rpx;
    padding: 0 50rpx;
    line-height: 100rpx;
    background-color: red;
    color: white;
    border-radius: 50rpx;
    text-align: center;
}

.preview-wrapper .empty {
    position: absolute;
    left: 0rpx;
    top: 500rpx;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 40rpx;
    text-align: center;
}